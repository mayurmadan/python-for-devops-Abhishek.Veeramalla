import test_module

#using modules using even_number function from it
num = int(input("enter your value:"))
test_module.even_number(num)
if test_module.even_number(num) == True:
    print ("number is even")
else:
    squre = test_module.get_squre(num)
    print(f"sqare of {num} is {squre}")
    print("entered value is odd, so we calculate squre of it above")

#calling add function from module
x = int(input("add first value for addition:"))
y = int(input("add second value for addition:"))    
print("addition is:", test_module.add(x,y))

#calling divide function from module
result_is = test_module.divide(x=10,y=12)
print(f"result of divide is {result_is}")
